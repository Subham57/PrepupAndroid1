<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="105dp"
                android:layout_height="52dp"
                android:textSize="18dp"
                android:background="#678EDD"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="20dp"
                android:text="Login"
                app:layout_constraintStart_toEndOf="@+id/btn_register"
                app:layout_constraintTop_toBottomOf="@+id/et_role" />

            <EditText
                android:id="@+id/et_role"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Role"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_Cpassword" />

            <EditText
                android:id="@+id/et_Cpassword"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Conform Password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_Inst" />

            <EditText
                android:id="@+id/et_Inst"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Institute Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_Email" />

            <EditText
                android:id="@+id/et_Email"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Email ID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_Phnumber" />

            <EditText
                android:id="@+id/et_Phnumber"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Phone Number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_lname" />

            <EditText
                android:id="@+id/et_lname"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Last Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_mname" />

            <EditText
                android:id="@+id/et_mname"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Middle Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_fname" />

            <ImageView
                android:id="@+id/iv_avtar"
                android:layout_width="220dp"
                android:layout_height="115dp"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/av1" />

            <EditText
                android:id="@+id/et_fname"
                android:layout_width="285dp"
                android:layout_height="49dp"
                android:layout_marginStart="63dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="63dp"
                android:layout_marginRight="63dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="First Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_avtar" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="105dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#678EDD"
                android:text="Regiser"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.205"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_role" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>